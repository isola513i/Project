public class Song {
    private static final String Song = null;
    private String title;
    private String artist;
    private int duration;
    private boolean isLike;
    private String nameSongList;
    private int songCount; 
    Song[] songs = {};  //Array 

    // Constructor
    public Song(String title, String artist, int duration) {
        this.title = title;
        this.artist = artist;
        this.duration = duration; // in seconds
        this.isLike = false;
    }

    public void Playlist(String title, String artist,int duration){
        this.title = title;
        this.artist = artist;
        this.duration = duration;
        return;
    }

    // Getter Setter
    public String getTitle() {
        return title;
    }

    public void setTitle(String title) {
        this.title = title;
    }

    public String getArtist() {
        return artist;
    }

    public void setArtist(String artist) {
        this.artist = artist;
    }

    public int getDuration() {
        return duration;
    }

    public void setDuration(int duration) {
       this.duration = duration;
    }
    @Override
    public String toString() {
        return "Song [title=" + title + ", artist=" + artist + ", duration=" + duration + "]";
    }

    //addSong method that takes a Song object as a parameter and adds it to the songs array.
    public void addSong(Song song){
        if(songCount >= songs.length){
        System.out.println("Your playlist is full");
        return;
        }
        songs[songCount] = song;
        songCount++;
    }

    //showPlaylist print all the song in the playlist for example

    public void showPlaylist(){
        for(int i =0; i < songs.length; i++){
            System.out.println(songs[i]);
        }
    }


}